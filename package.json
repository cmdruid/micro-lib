{
  "name": "@vbyte/micro-lib",
  "version": "1.0.0",
  "description": "A collection of micro libraries, helper methods, and utilities.",
  "author": "Christopher Scott",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/cmdruid/micro-lib.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/main.cjs",
  "types": "./dist/index.d.ts",
  "unpkg": "./dist/script.js",
  "scripts": {
    "build": "./scripts/build.sh",
    "release": "npm test | faucet && npm run build",
    "scratch": "npm run script test/scratch.ts",
    "script": "tsx --tsconfig ./test/tsconfig.json",
    "test": "npm run script test/tape.ts"
  },
  "devDependencies": {
    "@noble/curves": "^1.9.2",
    "@noble/hashes": "^1.8.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.3",
    "@scure/base": "^1.2.6",
    "@types/node": "^24.0.3",
    "@types/tape": "^5.8.1",
    "@vbyte/buffy": "^1.0.0",
    "faucet": "^0.0.4",
    "rollup": "^4.44.0",
    "tape": "^5.9.0",
    "tslib": "^2.8.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "zod": "^3.25.67"
  }
}
